apiVersion: v1
kind: Pod
metadata:
  name: probe-pod
  labels:
    app: probe
spec:
  containers:
    - name: nginx
      image: nginx
      ports:
        - containerPort: 80

      startupProbe:
        httpGet:
          path: /
          port: 80
        failureThreshold: 30
        periodSeconds: 5

      readinessProbe:
        httpGet:
          path: /
          port: 80
        initialDelaySeconds: 5
        periodSeconds: 5

      livenessProbe:
        httpGet:
          path: /
          port: 80
        initialDelaySeconds: 10
        periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: probe-service
spec:
  type: NodePort
  selector:
    app: probe
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30008
